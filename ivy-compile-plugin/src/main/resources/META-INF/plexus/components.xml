<component-set>
    <components>
        <component>
            <role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
            <role-hint>iar</role-hint>
            <implementation>
                org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping
            </implementation>
            <configuration>
                <phases>
                	<initialize>ch.ivyteam.ivy:ivy-compile-plugin:ensureInstalledEngine</initialize>
                    <compile>ch.ivyteam.ivy:ivy-compile-plugin:compileProject</compile>
                    <package>ch.ivyteam.ivy:ivy-compile-plugin:attach-artifact</package>
                </phases>
            </configuration>
        </component>
        <component>
            <role>org.apache.maven.artifact.handler.ArtifactHandler</role>
            <role-hint>iar</role-hint>
            <implementation>
                org.apache.maven.artifact.handler.DefaultArtifactHandler
            </implementation>
            <configuration>
                <type>iar</type>
                <extension>iar</extension>
                <packaging>iar</packaging>
            </configuration>
        </component>
    </components>
</component-set>